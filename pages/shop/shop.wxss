/* pages/shop/shop.wxss */
@import '../../common.wxss';
.buy-tips{
  display: block;
  position: absolute;
  top: 80rpx;
  left: 50rpx;
  height: 100rpx;
}
.tips-item{
  display: block;
  padding: 10rpx;
  background: rgba(0,0,0,.06);
  border-radius: 10rpx;
}
.tips-item text{
  padding: 0 20rpx;
  color: #FFF;
  line-height: 50rpx;
}
.tips-item image{
  display: inline-block;
  float: left;
  width: 50rpx;
  height: 50rpx;
  border-radius: 60rpx;
}
.shop-ban image{
  width: 100%;
  height: 500rpx;
  box-shadow: 0 1px 8px rgba(0,0,0,.06);
}
.iterm-info{
  display: block;
  height: 300rpx;
  padding: 20rpx 30rpx;
   background: #FFF;
   box-shadow: 0 1px 8px rgba(0,0,0,.06);
}
.iterm-price{
  display: inline-block;
  float:left;
  color: red;
  font-size: 38rpx;
}
.iterm-price text{
  padding-left: 30rpx;
  color: #999;
  font-size: 28rpx;
}
.iterm-want{
  display: inline-block;
  float: right;
  line-height: 50rpx;
  font-size: 28rpx;
  color: #999;
}
.iterm-title{
  display: -webkit-box;
  display: box;
  height: 100rpx;
  margin: 20rpx 0;
  font-size: 34rpx;
  overflow: hidden;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
  box-orient: vertical;
  clear: both;
}

.shop-info{
  display: block;
  margin: 20rpx auto;
  padding: 20rpx 30rpx;
  color: #999;
  background: #FFF;
  box-shadow: 0 1px 8px rgba(0,0,0,.06);
}

.shop-info text{
  display: block;
  margin: 10rpx 0;
  line-height: 50rpx;
}
.shop-title{
  font-size: 34rpx;
  font-weight: bold;
  line-height: 80rpx;
  color: #1f1f1f;
  text-align: center;
}
.shop-desc{  width: 100%;
  text-align: center;}
.shop-desc text{
  display: block;

}
.shop-work{
  display: block;
  height: 80rpx;
  text-align: center;
  margin-bottom: 20rpx;
}
.shop-phone{
  display: block;
  margin: 10rpx;
  height: 60rpx;
  font-size: 34rpx;
}
.shop-phone text{
  display: inline-block;
  color: #c2a608;
}
.shop-addr text{
  display: inline-block;
  float: right;
  background: #ffe971;
}