<view class="contain">
  <!-- User -->
  <view class="user">
    <view class="user-info">
      <image class="user-img" src="../public/images/logo.jpg"></image>
      <text class="user-name">MilFun</text>
    </view>
    <view class="user-coin">
      <image class="coin-img" src="../public/images/coin.png"></image>
      <text class="coin-txt">我的金币</text>
    </view>
    <view class="clear"></view>
    <view class="holder"></view>
    <!-- vip card -->
    <view class="vip" bindtap="vip">
      <image class="vip-icon" src="../public/images/vip2.png"></image>
